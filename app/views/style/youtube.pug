style.
    .iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.2%;
    height: 0;
    }
    .iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    }
    @media (max-width: 1300px) and (min-width: 769px) {
    .iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.2%;
    height: 0;
    }
    }
    @media (max-width:768px) {
    .iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.3%;
    height: 0;
    }
    }
    @media (max-width:591px) {
    .iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.15%;
    height: 0;
    }
    }
