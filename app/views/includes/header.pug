		/* Break points */
		@media (min-width: 769px) {
		.LP-DESKTOP {
		display: block;
		}
		.LP-DEVICE {
		display: none;
		}
		}
		@media (max-width: 768px) {
		.LP-DEVICE {
		display: block;
		}
		.LP-DESKTOP {
		display: none;
		}
		}
		/* END Break points */
		.row,
		#landingPage {
		max-width: 2000px;
		margin: auto;
		}
		.row {
		position: relative;
		overflow: hidden;
		width: 90%;
		margin: auto;
		max-width: 1300px;
		text-align: center;
		}
		.row.hero {
		max-width: 2000px;
		}
		.row .image-bckg {
		display: block;
		margin: auto;
		box-sizing: border-box;
		position: relative;
		margin-top: 0px;
		width: 100%;
		}
		.row .image-bckg img {
		display: block;
		margin: auto;
		}
		.row .text-wrap {
		text-align: center;
		}
		.row .text-over {
		display: block;
		width: 100%;
		max-width: 591px;
		position: relative;
		}
		.row .ctas>a {
		z-index: 4;
		}
		.row .half {
		width: 100%;
		display: block;
		}
		/*   MARGINS   */
		@media (min-width: 769px) {
		.row {
		margin-top: 40px;
		}
		}
		@media (max-width: 1300px) and (min-width: 769px) {
		.row {
		/*     margin-top: calc( (40 / 1300) * 100% ); */
		}
		}
		@media (max-width: 768px) {
		.row,
		.row .half:nth-child(2) {
		margin-top: 40px;
		/*	margin-top: calc((40/591) * 100%); */
		}
		}
		@media (max-width: 591px) {
		.row,
		.row .half:nth-child(2) {
		margin-top: 40px;
		margin-top: calc((40/591) * 100%);
		}
		}
		/* First Row */
		.row.row1 {
		margin-top: 0px;
		}
		@media (min-width: 1024px) {
		.show-desk {
